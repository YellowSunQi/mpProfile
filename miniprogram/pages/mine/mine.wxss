/* miniprogram/pages/mine/mine.wxss */
.container{
	background-color: #f8f8f8;
	height: 100%;
}
.container .top .banner{
	position: relative;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	height: 340rpx;
	width: 100%;
	background:#fff url("https://uploadimg-1258426051.cos.ap-guangzhou.myqcloud.com/bgMine.png") center center no-repeat;
	background-size: cover;
}

.container .top .banner::after{
	content: "";
	height: 1px;
	width: 100%;
	position: absolute;
	background-color: #E8E8E8;
	bottom: 0;
	left: 0;
	transform: scaleY(0.2);
}

.banner .avatar{
	height: 180rpx;
	width: 180rpx;
}

.banner .avatar image{
	height: 100%;
	width: 100%;
}

.banner .name{
	margin-top: 20rpx;
	font-size: 34rpx;
	color: #3a3a3a;
	letter-spacing: 1rpx;
	line-height: 48rpx;
	font-weight: 600;
}

.top .dataList{
	height: 144rpx;
	display: flex;
	background-color: #fff;
}

.dataList .listItem{
	display: flex;
	flex-direction: column;
	flex: 1;
	justify-content: center;
	align-items: center;
}

.dataList .listItem .title{
	color: #999;
	font-size: 22rpx;
	line-height: 32rpx;
}

.dataList .listItem .content{
	color: #3a3a3a;
	font-size: 36rpx;
	line-height: 50rpx;
	font-weight: 500;
}

.bottom{
	background-color: #fff;
	margin-top: 20rpx;
}

.bottom .listItem{
	position: relative;
	box-sizing: border-box;
	padding: 0 32rpx;
	display: flex;
	height: 118rpx;
	justify-content: space-between;
	align-items: center;
}

.bottom .listItem::after{
	content: "";
	position: absolute;
	height: 1px;
	width: 84%;
	background-color: #E8E8E8;
	left: 54%;
	transform: translateX(-50%) scaleY(0.2);
	bottom: 0;
}

.bottom .listItem .listLeft{
	display: flex;
	align-items: center;
}

.bottom .listItem .listLeft .icon{
	float: left;
	height: 52rpx;
	width: 52rpx;	
}

.listItem .listLeft .icon image{
	height: 100%;
	width: 100%;
}

.listItem .listLeft .title{
	float: left;
	margin-left: 12rpx;
	font-size: 28rpx;
	color: #3a3a3a;
}

.listItem .more{
	height: 52rpx;
	width: 52rpx;	
}

.listItem .more image{
	height: 100%;
	width: 100%;
}